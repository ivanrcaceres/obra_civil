<odoo>
    <data>

        <!-- detalle del los servicios en el contrato -->
        <record model="ir.ui.view" id="contrato_contratista_detalle_form_view">
            <field name="name">contrato_contratista_detalle.form</field>
            <field name="model">certificados.contrato_contratista_detalle</field>
            <field name="arch" type="xml">
                <form string="Detalle Contrato Form">
                    <sheet>
                        <group>
                            <field name="product_id"/>
                            <field name="unidad_de_medida" />
                            <field name="price_unit"/>
                            <field name="quantity"/>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="contrato_cliente_detalle_tree_view" model="ir.ui.view">
            <field name="name">contrato_cliente_detalle.tree</field>
            <field name="model">certificados.contrato_cliente_detalle</field>
            <field name="arch" type="xml">
                <tree string="Contratos detalle con clientes">
                    <field name="product_id"/>
                </tree>
            </field>
        </record>

</data>
</odoo>